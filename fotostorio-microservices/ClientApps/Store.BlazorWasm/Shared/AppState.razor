<CascadingValue Value="this">
    @ChildContent
</CascadingValue>

@code {
    [Parameter]
    public RenderFragment ChildContent { get; set; }

    private int basketItemCount = 0;
    public int BasketItemCount
    {
        get
        {
            return basketItemCount < 0 ? 0 : basketItemCount;
        }
        set
        {
            basketItemCount = value;
            StateHasChanged();
        }
    }
}
