{
  "Routes": [
    // Discounts and Marketing Campaigns (from Discount.minAPI)
    {
      "DownstreamPathTemplate": "/api/discounts",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "discount.minapi",
          "Port": "80"
        }
      ],
      "UpstreamPathTemplate": "/Marketing/Discounts",
      "UpstreamHttpMethod": [ "GET", "POST", "PUT" ]
    },
    {
      "DownstreamPathTemplate": "/api/discounts/{url}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "discount.minapi",
          "Port": "80"
        }
      ],
      "UpstreamPathTemplate": "/Marketing/Discounts/{url}",
      "UpstreamHttpMethod": [ "GET", "DELETE" ]
    },
    {
      "DownstreamPathTemplate": "/api/campaigns",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "discount.minapi",
          "Port": "80"
        }
      ],
      "UpstreamPathTemplate": "/Marketing/Campaigns",
      "UpstreamHttpMethod": [ "GET", "POST", "PUT" ]
    },
    {
      "DownstreamPathTemplate": "/api/campaigns/{url}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "discount.minapi",
          "Port": "80"
        }
      ],
      "UpstreamPathTemplate": "/Marketing/Campaigns/{url}",
      "UpstreamHttpMethod": [ "GET" ]
    },
    // Products/Catalog (from Products.API & Products.Aggregator)
    {
      "DownstreamPathTemplate": "/api/aggr/Products?{querystring}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "products.aggregator",
          "Port": "80"
        }
      ],
      "UpstreamPathTemplate": "/Marketing/Catalog?{querystring}",
      "Priority": 1,
      "UpstreamHttpMethod": [ "GET" ],
      "FileCacheOptions": { "TtlSeconds": 30 },
      "RateLimitOptions": {
        "ClientWhitelist": [],
        "EnableRateLimiting": true,
        "Period": "5s",
        "PeriodTimespan": 1,
        "Limit": 1
      }
    },
    {
      "DownstreamPathTemplate": "/api/Products",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "products.api",
          "Port": "80"
        }
      ],
      "UpstreamPathTemplate": "/Marketing/Catalog",
      "UpstreamHttpMethod": [ "GET" ],
      "FileCacheOptions": { "TtlSeconds": 30 },
      "RateLimitOptions": {
        "ClientWhitelist": [],
        "EnableRateLimiting": true,
        "Period": "5s",
        "PeriodTimespan": 1,
        "Limit": 1
      }
    },
    {
      "DownstreamPathTemplate": "/api/Products/{value}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "products.api",
          "Port": "80"
        }
      ],
      "UpstreamPathTemplate": "/Marketing/Catalog/{value}",
      "UpstreamHttpMethod": [ "GET" ],
      "FileCacheOptions": { "TtlSeconds": 30 },
      "RateLimitOptions": {
        "ClientWhitelist": [],
        "EnableRateLimiting": true,
        "Period": "5s",
        "PeriodTimespan": 1,
        "Limit": 1
      }
    }
  ],
  "GlobalConfiguration": {
    "BaseUrl": "http://localhost:8011"
  }
}
