          "Port": "8001"
        }
      ],
      "UpstreamPathTemplate": "/Brands",
      "UpstreamHttpMethod": [ "GET" ],
      "FileCacheOptions": { "TtlSeconds": 300 },
      "RateLimitOptions": {
        "ClientWhitelist": [],
        "EnableRateLimiting": true,
        "Period": "1s",
        "PeriodTimespan": 1,
        "Limit": 5
